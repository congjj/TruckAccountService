<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ln.truck.service.account.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="cn.ln.truck.service.account.entity.UsersEntity">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="active" jdbcType="INTEGER" property="active" />
    </resultMap>

    <select id="findUserById" resultType="cn.ln.truck.service.account.entity.UsersEntity">
        select * from users where id = #{id}
    </select>
    <select id="findUserAll" resultMap="BaseResultMap" resultType="cn.ln.truck.service.account.entity.UsersEntity">
        select * from users
    </select>
</mapper>
