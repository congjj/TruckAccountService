<mapper namespace="cn.ln.truck.service.account.mapper.account.AccountMapper">

    <resultMap id="BaseResultMap" type="cn.ln.truck.service.account.entity.account.AccountEntity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="subject_id" jdbcType="INTEGER" property="subjectId"/>
        <result column="truck_id" jdbcType="INTEGER" property="truckId"/>
        <result column="subject_name" jdbcType="VARCHAR" property="subjectName"/>
        <result column="price" jdbcType="DOUBLE" property="price"/>
        <result column="count" jdbcType="DOUBLE" property="count"/>
        <result column="result" jdbcType="DOUBLE" property="result"/>
        <result column="account_date" jdbcType="DATE" property="accountDate"/>
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime"/>
        <result column="active" jdbcType="INTEGER" property="active"/>
        <result column="custom_id" jdbcType="INTEGER" property="customId"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>

    <select id="findAccountByCode" resultMap="BaseResultMap" resultType="cn.ln.truck.service.account.entity.account.AccountEntity">
        select * from account where truck_id = #{truckId,jdbcType=INTEGER} and account_date = #{accountDate,jdbcType=DATE}
    </select>
    <select id="findAccountAll" resultMap="BaseResultMap" resultType="cn.ln.truck.service.account.entity.account.AccountEntity">
        select * from account
    </select>
    <insert id="insertAccount" parameterType="cn.ln.truck.service.account.entity.account.AccountEntity">
    INSERT INTO account (id,code, driver_id, getdate, area_number ,active)
    VALUES (#{id,jdbcType=INTEGER},#{code,jdbcType=VARCHAR},#{driver_id,jdbcType=VARCHAR},#{getdate,jdbcType=TIMESTAMP},#{area_number,jdbcType=VARCHAR},#{active,jdbcType=INTEGER})
    </insert>

